<config>
    <tabs>
        <gaugeinteractive_all translate="label">
            <label>Gauge Interactive</label>
            <sort_order>9999</sort_order>
        </gaugeinteractive_all>
    </tabs>
    <sections>
        <low_qty_alert>
            <label>Low Inventory Alert</label>
            <tab>gaugeinteractive_all</tab>
            <sort_order>9999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled>
                            <label>Extension Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>To Enable Extension</comment>
                        </enabled>
                        <sender_email>
                            <label>Sender Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                        </sender_email>
                        <recipient_email>
                            <label>Recipient Email Address</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                        </recipient_email>
                        <recipient_name>
                            <label>Recipient Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                        </recipient_name>
                        <bcc_list>
                            <label>BCC List</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Separate multiple emails by semi-columns (;)</comment>
                        </bcc_list>
                        <low_inventory_email_template translate="label">
                            <label>Use Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </low_inventory_email_template>
                        <min_qty_threshold>
                            <label>Minimum Quantity Threshold</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Alert email will be trigger if QTY goes below this number.</comment>
                            <validate>validate-number required-entry</validate>
                        </min_qty_threshold>
                    </fields>
                </settings>
            </groups>
        </low_qty_alert>
    </sections>
</config>